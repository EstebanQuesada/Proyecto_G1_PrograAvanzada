@model ProyectoGrupo1.Models.Carrito
@{
    ViewData["Title"] = "Confirmar pedido";
}
<h2>Confirmar pedido</h2>

@if (Model.Detalles.Count == 0)
{
    <div class="alert alert-info">Tu carrito está vacío.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Talla</th>
                <th>Color</th>
                <th class="text-end">Cant.</th>
                <th class="text-end">P. Unit</th>
                <th class="text-end">Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var d in Model.Detalles)
            {
                <tr>
                    <td>@d.NombreProducto</td>
                    <td>@d.NombreTalla</td>
                    <td>@d.NombreColor</td>
                    <td class="text-end">@d.Cantidad</td>
                    <td class="text-end">@d.PrecioUnitario.ToString("C")</td>
                    <td class="text-end">@d.Subtotal.ToString("C")</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="5" class="text-end">Total</th>
                <th class="text-end">@Model.Detalles.Sum(x => x.Subtotal).ToString("C")</th>
            </tr>
        </tfoot>
    </table>

    <form asp-action="Confirmar" method="post">
        @Html.AntiForgeryToken()
        <a asp-controller="Carrito" asp-action="Index" class="btn btn-outline-secondary">Volver al carrito</a>
        <button type="submit" class="btn btn-success">Confirmar pedido</button>
    </form>
}
