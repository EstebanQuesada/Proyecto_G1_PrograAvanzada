@model List<ProyectoGrupo1.Service.ApiCatalogosClient.LookupVm>

@{
    ViewData["Title"] = (string)(ViewBag.Titulo ?? "Catálogo");
    var tipo = (string)(ViewBag.Tipo ?? "item");

    string Pascal(string s) => string.IsNullOrEmpty(s) ? "" : char.ToUpper(s[0]) + s.Substring(1);
    var accionCrear = $"Crear{Pascal(tipo)}";
    var accionActualizar = $"Actualizar{Pascal(tipo)}";
    var accionEliminar = $"Eliminar{Pascal(tipo)}";
    var total = Model?.Count ?? 0;
}

<div class="page-header mb-3">
    <h2 class="page-title">@ViewData["Title"]</h2>
    <span class="count-pill">Total: @total</span>
</div>

@if (TempData["Mensaje"] is string ok)
{
    <div class="alert alert-success alert-dismissible fade show mb-3" role="alert">
        @ok
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
}
@if (TempData["Error"] is string err)
{
    <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
        @err
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
}

<div class="card-elevated">
    <div class="card-body">
        <form asp-action="@accionCrear" method="post" class="toolbar mb-3" autocomplete="off">
            @Html.AntiForgeryToken()
            <input name="nombre" class="form-control" placeholder="Nuevo @ViewData["Title"]..." />
            <button class="btn btn-success">Agregar</button>
        </form>

        <div class="table-wrap">
            <div class="table-responsive">
                <table class="table table-modern table-hover table-sm align-middle">
                    <thead>
                        <tr>
                            <th style="width:90px">ID</th>
                            <th>Nombre</th>
                            <th class="text-end" style="width:170px">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model is { Count: > 0 })
                        {
                            foreach (var it in Model)
                            {
                                <tr>
                                    <td>@it.Id</td>
                                    <td>
                                        <form asp-action="@accionActualizar" method="post" class="row-form mb-0">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@it.Id" />
                                            <input name="nombre" value="@it.Nombre" class="form-control form-control-sm" />
                                            <button class="btn btn-primary btn-sm">Guardar</button>
                                        </form>
                                    </td>
                                    <td class="text-end">
                                        <button type="button"
                                                class="btn btn-outline-danger btn-sm"
                                                data-id="@it.Id"
                                                data-name="@it.Nombre"
                                                data-bs-toggle="modal"
                                                data-bs-target="#confirmDeleteModal">
                                            Eliminar
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="empty-state">Sin datos.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow">
            <div class="modal-header">
                <h5 class="modal-title">Confirmar eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <form id="delForm" asp-action="@accionEliminar" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="" />
                <div class="modal-body">
                    ¿Seguro que deseas eliminar <strong data-del-name></strong>?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Sí, eliminar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
          const modalEl = document.getElementById('confirmDeleteModal');
          const nameEl  = modalEl.querySelector('[data-del-name]');
          const idInput = modalEl.querySelector('input[name="id"]');
          modalEl.addEventListener('show.bs.modal', function (ev) {
            const btn = ev.relatedTarget; if (!btn) return;
            nameEl.textContent = btn.getAttribute('data-name') || '';
            idInput.value      = btn.getAttribute('data-id')   || '';
          });
        });
    </script>
}
