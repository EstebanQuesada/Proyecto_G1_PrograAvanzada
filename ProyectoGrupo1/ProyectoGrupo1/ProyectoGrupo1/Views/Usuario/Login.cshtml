@model ProyectoGrupo1.Models.Usuario

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null;
}

<link rel="stylesheet" href="~/css/login.css" />

<div class="login-wrapper">
    <div class="login-box">
        <h2 class="login-title">Iniciar Sesión</h2>

        <form asp-action="Login" method="post">
            <div class="form-group">
                <label for="Correo">Correo</label>
                <input asp-for="Correo" class="form-control" placeholder="Correo electrónico" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Contrasena">Contraseña</label>
                <input asp-for="Contrasena" class="form-control" type="password" placeholder="Contraseña" />
                <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>

            <div class="text-end">
                <a href="#" class="forgot-password">¿Olvidaste tu contraseña?</a>
            </div>

            <button type="submit" class="btn-login">Ingresar</button>

            @if (ViewBag.Mensaje != null)
            {
                <div class="alert alert-danger mt-3 text-center">@ViewBag.Mensaje</div>
            }

            <p class="text-center mt-4">
                ¿No tienes cuenta? <a asp-controller="Usuario" asp-action="Register">Regístrate aquí</a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
