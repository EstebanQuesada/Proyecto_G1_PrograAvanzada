@model ProyectoGrupo1.Models.Usuario
@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Tienda Ropa</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
</head>
<body>
    <div class="login-wrapper">
        <div class="login-box">
            <h2 class="login-title">Iniciar Sesión</h2>

            <form asp-action="Login" method="post" asp-antiforgery="true" autocomplete="on" id="loginForm">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                <div class="form-group mb-3">
                    <label asp-for="Correo"></label>
                    <input asp-for="Correo" type="email" class="form-control"
                           placeholder="Correo electrónico" autocomplete="username" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="Contrasena"></label>
                    <div class="password-wrap">
                        <input asp-for="Contrasena" type="password" class="form-control"
                               placeholder="Contraseña" autocomplete="current-password" id="pwdLogin" />
                        <button type="button" class="toggle-pwd" data-target="#pwdLogin">Mostrar</button>
                    </div>
                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                </div>

                <div class="text-end mb-3">
                    <a href="#" class="forgot-password">¿Olvidaste tu contraseña?</a>
                </div>

                <button type="submit" class="btn-login" id="btnLogin">Ingresar</button>

                @if (ViewBag.Mensaje != null)
                {
                    <div class="alert alert-danger mt-3 text-center">@ViewBag.Mensaje</div>
                }

                <p class="text-center mt-4">
                    ¿No tienes cuenta?
                    <a asp-controller="Usuario" asp-action="Register">Regístrate aquí</a>
                </p>
            </form>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
          const tgl = document.querySelector('.toggle-pwd');
          if (tgl){
            tgl.addEventListener('click', () => {
              const sel = tgl.getAttribute('data-target');
              const input = document.querySelector(sel);
              if (!input) return;
              const isPwd = input.type === 'password';
              input.type = isPwd ? 'text' : 'password';
              tgl.textContent = isPwd ? 'Ocultar' : 'Mostrar';
            });
          }
          const btn = document.getElementById('btnLogin');
          const form = document.getElementById('loginForm');
          if (btn && form){
            form.addEventListener('submit', () => {
              btn.disabled = true;
              btn.textContent = 'Ingresando...';
              setTimeout(()=>{ btn.disabled=false; btn.textContent='Ingresar'; }, 8000);
            });
          }
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
