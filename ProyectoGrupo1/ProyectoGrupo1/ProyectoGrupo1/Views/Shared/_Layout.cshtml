<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Tienda Ropa</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4">
            <a class="navbar-brand fw-bold text-white" asp-controller="Home" asp-action="Index">Tienda Ropa</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" asp-controller="Producto" asp-action="Index">Catálogo</a></li> <!-- RF3 -->
                    <li class="nav-item"><a class="nav-link" asp-controller="Carrito" asp-action="Index">Carrito</a></li> <!-- RF6 -->
                    <li class="nav-item"><a class="nav-link" asp-controller="Pedido" asp-action="Index">Mis Pedidos</a></li> <!-- RF10 -->
                    <li class="nav-item"><a class="nav-link" asp-controller="Contacto" asp-action="Index">Contacto</a></li> <!-- RF5 -->
                </ul>

                <ul class="navbar-nav mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" asp-controller="Usuario" asp-action="Perfil">Mi Perfil</a></li> <!-- RF8 -->
                    <li class="nav-item"><a class="nav-link text-danger" asp-controller="Usuario" asp-action="Logout">Cerrar sesión</a></li> <!-- RF2 -->
                </ul>
            </div>
        </nav>
    </header>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="bg-light text-center py-3 border-top">
        <div class="container">
            <span class="text-muted">© @DateTime.Now.Year Tienda Ropa - Todos los derechos reservados</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
