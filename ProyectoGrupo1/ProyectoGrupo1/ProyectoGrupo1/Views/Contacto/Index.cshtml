
@model ProyectoGrupo1.Models.ContactoViewModel
@{
    ViewData["Title"] = "Contacto";
    var descripcion = (string)(ViewBag.Descripcion ?? "");
    var confirmacion = (string)(ViewBag.Confirmacion ?? "");
}

<link rel="stylesheet" href="~/css/index.css" />

<h1>Contacto</h1>
<p class="descripcion">@descripcion</p>

@if (!string.IsNullOrWhiteSpace(confirmacion))
{
    <p class="confirmacion">@confirmacion</p>
}

<form asp-controller="Contacto" asp-action="Index" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly"></div>

    <div>
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" />
        <span asp-validation-for="Nombre"></span>
    </div>

    <div>
        <label asp-for="Correo"></label>
        <input asp-for="Correo" type="email" />
        <span asp-validation-for="Correo"></span>
    </div>

    <div>
        <label asp-for="Mensaje"></label>
        <textarea asp-for="Mensaje"></textarea>
        <span asp-validation-for="Mensaje"></span>
    </div>

    <button type="submit">Enviar</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
