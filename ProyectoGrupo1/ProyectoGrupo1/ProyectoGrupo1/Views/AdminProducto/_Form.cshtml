@model ProyectoGrupo1.Service.ApiAdminProductoClient.AdminProductoSaveVm

<div class="card-elevated mb-3">
    <div class="card-header"><h5 class="mb-0">Datos del producto</h5></div>
    <div class="card-body">
        <div class="mb-3">
            <label class="form-label">Nombre</label>
            <input asp-for="Nombre" class="form-control" />
            <span class="text-danger small" asp-validation-for="Nombre"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Descripción</label>
            <textarea asp-for="Descripcion" class="form-control" rows="5"></textarea>
            <span class="text-danger small" asp-validation-for="Descripcion"></span>
        </div>

        <div class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Precio</label>
                <input asp-for="Precio" type="number" step="0.01" class="form-control" />
                <span class="text-danger small" asp-validation-for="Precio"></span>
            </div>
            <div class="col-md-4">
                <label class="form-label">Categoría</label>
                <select asp-for="CategoriaID" id="CategoriaID" class="form-select" data-selected="@Model.CategoriaID"></select>
            </div>
            <div class="col-md-4">
                <label class="form-label">Marca</label>
                <select asp-for="MarcaID" id="MarcaID" class="form-select" data-selected="@Model.MarcaID"></select>
            </div>
        </div>

        <div class="row g-3 mt-2">
            <div class="col-md-6">
                <label class="form-label">Proveedor</label>
                <select asp-for="ProveedorID" id="ProveedorID" class="form-select" data-selected="@Model.ProveedorID"></select>
            </div>
        </div>
    </div>
</div>

<div class="card-elevated mb-3">
    <div class="card-header"><h5 class="mb-0">Imágenes</h5></div>
    <div class="card-body">
        <div id="imgs">
            <div class="input-group mb-2" data-img-row>
                <span class="input-group-text p-1 rounded preview-addon">
                    <img data-preview style="width:42px;height:42px;object-fit:cover;border-radius:8px" />
                </span>
                <input type="text" class="form-control" placeholder="https://..." />
                <button type="button" class="btn btn-outline-danger">Quitar</button>
            </div>
        </div>
        <div class="d-flex gap-2">
            <button type="button" id="btnAddImg" class="btn btn-ghost">Agregar imagen</button>
            <span class="text-muted small align-self-center">Pega URLs públicas (JPG/PNG/WebP).</span>
        </div>
    </div>
</div>

<div class="card-elevated">
    <div class="card-header d-flex align-items-center justify-content-between">
        <h5 class="mb-0">Variantes (PTC)</h5>
    </div>
    <div class="card-body">
        <div id="ptcs">
            <div class="row g-2 align-items-center mb-2" data-ptc-row>
                <div class="col-md-4"><select class="form-select" name="talla"></select></div>
                <div class="col-md-4"><select class="form-select" name="color"></select></div>
                <div class="col-md-3">
                    <div class="input-group">
                        <span class="input-group-text">Stock</span>
                        <input type="number" class="form-control" name="stock" value="0" min="0" />
                    </div>
                </div>
                <div class="col-md-1 text-end">
                    <button type="button" class="btn btn-outline-danger" title="Quitar variante">X</button>
                </div>
            </div>
        </div>

        <button type="button" id="btnAddPtc" class="btn btn-ghost mt-1">Agregar variante</button>
    </div>
</div>
